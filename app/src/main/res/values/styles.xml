<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="SettingsButton" parent="SettingsItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:padding">5dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/setting_text_size</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AlertDialog" parent="android:Theme.Material.Dialog.Alert">
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorAccent">@color/textAccent</item>
    </style>

    <style name="SecondaryText">
        <item name="android:textColor">@color/textDisabled</item>
        <item name="android:textSize">@dimen/secondary_text_size</item>
    </style>

    <style name="PrimaryText">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
    </style>

    <style name="SettingsTitle" parent="SettingsItem">
        <item name="android:textColor">@color/textDisabled</item>
        <item name="android:textSize">@dimen/secondary_text_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SettingsText" parent="SettingsItem">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">@dimen/setting_text_size</item>
    </style>

    <style name="SettingsTextNoParent">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">@dimen/setting_text_size</item>
    </style>

    <style name="SettingsTextSmall">
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SettingsItem">
        <item name="android:paddingEnd">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingStart">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingBottom">@dimen/setting_item_padding</item>
        <item name="android:paddingTop">@dimen/setting_item_padding</item>
    </style>

    <style name="Divider">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/dividerColor</item>
    </style>

    <style name="ErrorTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/error</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="InputLayoutMaterial">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:background">@drawable/textarea_border</item>
        <item name="android:paddingBottom">@dimen/edge_margin</item>
        <item name="android:paddingEnd">@dimen/edge_margin</item>
        <item name="android:paddingStart">@dimen/edge_margin</item>
        <item name="android:paddingTop">8dp</item>
    </style>

    <style name="InputLayoutEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">top|start</item>
        <item name="android:overScrollMode">always</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:scrollbarStyle">insideInset</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:inputType">textMultiLine</item>
    </style>
</resources>
