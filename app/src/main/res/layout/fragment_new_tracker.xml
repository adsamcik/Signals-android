<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/topPanelLayout"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="#FF1a8387"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="horizontal"
        android:gravity="bottom"
        >

        <TextView
            android:id="@+id/time"
            android:paddingStart="@dimen/edge_margin"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:textColor="@color/text_primary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:text="06:00:00"/>

        <ImageButton
            android:id="@+id/uploadButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_cloud_upload_24dp"
            android:tint="@color/text_primary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <ImageButton
            android:id="@+id/trackingButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_play_circle_filled_black_24dp"
            android:tint="@color/text_primary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <ImageButton
            android:id="@+id/settingsButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_settings_black_24dp"
            android:tint="@color/text_primary"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:paddingLeft="@dimen/edge_margin"
        android:paddingRight="@dimen/edge_margin">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/topInfoBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp">

            <ImageView
                android:id="@+id/icStorage"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_storage_black_24dp"
                android:tint="@android:color/white"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/data_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"
                android:paddingTop="4dp"
                app:layout_constraintLeft_toRightOf="@id/icStorage"
                app:layout_constraintTop_toTopOf="@id/icStorage"
                tools:text="588 KB"
                />

            <TextView
                android:id="@+id/collection_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="4dp"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"
                app:layout_constraintBottom_toBottomOf="@id/icStorage"
                app:layout_constraintLeft_toRightOf="@id/icStorage"
                tools:text="170 collections"
                />

            <ImageView
                android:id="@+id/icActivity"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_directions_car_white_24dp"
                android:tint="@android:color/white"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/altitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"
                android:paddingTop="4dp"
                android:textAlignment="textEnd"
                app:layout_constraintRight_toLeftOf="@id/icActivity"
                app:layout_constraintTop_toTopOf="@id/icActivity"
                tools:text="237 m altitude"
                />

            <TextView
                android:id="@+id/accuracy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="4dp"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"
                android:textAlignment="textEnd"
                app:layout_constraintBottom_toBottomOf="@id/icActivity"
                app:layout_constraintRight_toLeftOf="@id/icActivity"
                tools:text="8 m accuracy"
                />

        </android.support.constraint.ConstraintLayout>


        <ScrollView
            android:id="@+id/include"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:translationZ="-1dp">

            <com.google.android.flexbox.FlexboxLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:animateLayoutChanges="true"
                android:filterTouchesWhenObscured="true"
                app:alignItems="flex_start"
                app:dividerDrawableHorizontal="@drawable/flexbox_spacing"
                app:dividerDrawableVertical="@drawable/flexbox_spacing"
                app:flexWrap="wrap"
                app:showDividerHorizontal="middle"
                app:showDividerVertical="middle" />
        </ScrollView>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>