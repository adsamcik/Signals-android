<android.support.v7.preference.PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    key="root"
    title="Settings">

    <android.support.v7.preference.PreferenceScreen
        android:key="account_key"
        android:persistent="false"
        android:title="Account">
        <android.support.v7.preference.SwitchPreferenceCompat
            android:defaultValue="true"
            android:key="key1"
            android:summary="Switch Summary"
            android:title="Switch Preference"/>

        <android.support.v7.preference.EditTextPreference
            android:defaultValue="Default value"
            android:dialogMessage="Dialog Message"
            android:key="key2"
            android:summary="EditText Summary"
            android:title="EditText Preference"/>

        <android.support.v7.preference.CheckBoxPreference
            android:defaultValue="true"
            android:key="key3"
            android:summary="CheckBox Summary"
            android:title="CheckBox Preference"/>

    </android.support.v7.preference.PreferenceScreen>

    <android.support.v7.preference.PreferenceScreen
        android:key="tracking_key"
        android:persistent="false"
        android:title="Tracking">
        <android.support.v7.preference.SeekBarPreference
            android:defaultValue="true"
            android:key="key5"
            android:max="10"
            android:min="1"
            android:title="Upload at"/>

        <com.adsamcik.signalcollector.components.ValueSliderPreference
            android:key="key2"/>

        <android.support.v7.preference.CheckBoxPreference
            android:defaultValue="true"
            android:key="key3"
            android:summary="CheckBox Summary"
            android:title="CheckBox Preference"/>

    </android.support.v7.preference.PreferenceScreen>

    <android.support.v7.preference.PreferenceScreen
        android:key="debug_key"
        android:persistent="false"
        android:title="Debug">
        <android.support.v7.preference.SwitchPreferenceCompat
            android:defaultValue="true"
            android:key="key1"
            android:summary="Switch Summary"
            android:title="Switch Preference"/>

        <android.support.v7.preference.EditTextPreference
            android:defaultValue="Default value"
            android:dialogMessage="Dialog Message"
            android:key="key2"
            android:summary="EditText Summary"
            android:title="EditText Preference"/>

        <android.support.v7.preference.CheckBoxPreference
            android:defaultValue="true"
            android:key="key3"
            android:summary="CheckBox Summary"
            android:title="CheckBox Preference"/>

    </android.support.v7.preference.PreferenceScreen>

    <android.support.v7.preference.PreferenceCategory
        android:title="Export">

        <android.support.v7.preference.SwitchPreferenceCompat
            android:defaultValue="true"
            android:key="key1"
            android:summary="Switch Summary"
            android:title="Switch Preference"/>

        <android.support.v7.preference.EditTextPreference
            android:defaultValue="Default value"
            android:dialogMessage="Dialog Message"
            android:key="key2"
            android:summary="EditText Summary"
            android:title="EditText Preference"/>

        <android.support.v7.preference.CheckBoxPreference
            android:defaultValue="true"
            android:key="key3"
            android:summary="CheckBox Summary"
            android:title="CheckBox Preference"/>

    </android.support.v7.preference.PreferenceCategory>

</android.support.v7.preference.PreferenceScreen>